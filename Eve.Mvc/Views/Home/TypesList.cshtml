@model Eve.Mvc.Models.TypesListViewModel
@* @{
    ViewData["Title"] = "Home Page";
} *@

<div class="row">
    <div class="col-md-6 col-sm-8 col-xs-12">
        <table class="table">
            <thead>
                <tr>
                    <td style="text-align: right;">TypeId</td>
                    <td style="text-align: left;">Name</td>
                    <td style="text-align: left;">Marketable?</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var type in Model.eveUniverseTypes)
                {
                    <tr>
                        <td style="text-align: right;">@Html.ActionLink(type.TypeId.ToString(), "GetBuySellOrders", new { type.TypeId })</td>
                        <td style="text-align: left;">@type.Name</td>
                        <td style="text-align: left;">@(type.MarketGroupId > 0 ? "true" : "false")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
